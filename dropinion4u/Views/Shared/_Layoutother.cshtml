<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="keywords" content="Doctor Social Network, Doctor social platform, Healthcare network, healthcare networking, doctor network, healthcare specialists network, dropinion, corona, covid19, Drhelp, theses, paper, corona test, MBBS doctors, Phd Docters,MS, MD, lab, xrays, Women's health , joint replacement, Journals, Medical Blogs, Doctor Network, Doctor World, Medicines, Hydrocephalus, Brain Dropsy" />
    <meta name="description" content="DrOpinion has vision is to develop a dedicated network for healthcare specialists where they can collaborate in order to provide better healthcare to the world." />
    <title>Dr.Opinion </title>
    @*<script data-ad-client="ca-pub-2775227006482625" async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>*@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @*@Styles.Render("/Content/bootstrap.min.css")*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/toastr")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="~/Scripts/sweetalert.min.js"></script>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/customscripts/CustomLoader.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand navbar-light bg-light" style="padding:0">
        <div class="input-group">
            <a href="@Url.Action("Index", "Home")">
                <img src="~/images/Logo.png" alt="" height="50px;" />
            </a>
            <div class="buscar-caja pull-left">
                <input id="txtsearchbox" type="text" name="" class="buscar-txt" onmouseover="$(this).focus();" placeholder="Search Dr.Opinion" />
                <a class="buscar-btn" style="text-decoration:none">
                    <i class="fa fa-search"></i>
                </a>
            </div>
        </div>
        <div class="collapse navbar-collapse" id="nvadiv">
            <ul class="navbar-nav mr-auto">
                @if (Session["UserID"] != null)
                {
                    <li class="nav-item dropdown">
                        @*<a class="dropdown-toggle" data-toggle="dropdown" title="User" href="#" style="background-color:rgb(244,244,244); border-radius:20px;height:40px;width:120px;margin-top:4px;padding-left:14px;padding-top:11px;margin-right:18px;">
                                <span class="glyphicon glyphicon-user"> </span>
                                Vinay
                            </a>*@
                        <a class="nav-link dropdown-toggle" href="#" id="navbarUser" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <img style="border-radius:20px;" height="40" src="~/images/1.png" width="40" alt="">
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarUser">
                            <a class="dropdown-item" href="@Url.Action("SelfProfile","UserProfile")">
                                <span class="fa fa-user"> </span>
                                View profile
                            </a>
                            <a class="dropdown-item" href="@Url.Action("Settings","UserProfile")">
                                <span class="fa fa-question"></span>
                                Settings
                            </a>
                            <a class="dropdown-item" href="javascript:void(0);" id="logout" onclick="logout()">
                                <span class="fa fa-sign-out"></span>
                                Logout
                            </a>
                        </div>
                    </li>
                }
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <img style="border-radius:20px;" height="40" src="~/images/contact.gif" width="40" alt="">
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" data-toggle="modal" data-target="#modalFeedbackForm" style="cursor:pointer">
                            <span class="fa fa-envelope"></span>
                            Feedback
                        </a>
                        <a class="dropdown-item" href="@Url.Action("Privacy","Support")">
                            <span class="fa fa-exclamation"></span>
                            Terms and Conditions
                        </a>
                        <a class="dropdown-item" href="@Url.Action("FAQs","Support")">
                            <span class="fa fa-question"></span>
                            FAQs
                        </a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container bootstrap snippet">
        @RenderBody()
    </div>
</body>
@Html.Partial("~/Views/WebParts/_VerifyRegistrationBanner.cshtml")
@Html.Partial("~/Views/ModalDialog/_VerificationForm.cshtml")
@Html.Partial("~/Views/WebParts/_CookiesBanner.cshtml")
@Html.Partial("~/Views/ModalDialog/_LoginForm.cshtml")
@Html.Partial("~/Views/ModalDialog/_PostForm.cshtml")
@Html.Partial("~/Views/ModalDialog/_FeedbackForm.cshtml")
@Html.Partial("~/Views/ModalDialog/_EditProfile.cshtml")
</html>
