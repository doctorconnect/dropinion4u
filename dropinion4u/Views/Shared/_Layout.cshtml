                                        <li>@Html.ActionLink("Locations", "Location", "Support")</li>
                                        <li>@Html.ActionLink("Terms and Conditions", "BecomeReseller", "Support")</li>*@
                                    <li>@Html.ActionLink("Join Us", "JoinUs", "Support")</li>
                                    <li>@Html.ActionLink("Terms and Conditions", "Privacy", "Support")</li>
                                </ul>
                            </li>
                        </ul>
                        @*@Html.Partial("_LoginPartial")*@
                    </div>
                </div>
                <div class="col-sm-2">

                </div>
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
    </div>
    <hr />
    <div class="footer-bg">
        <div class="container">
            <p class="pull-left">
                <a href="#">&copy; 2020 - Dr. Opinion Point - Copyright Protected</a>
            </p>
            <p class="pull-right"><a href="@Url.Action("Privacy", "Support")" target="_blank">Terms and Conditions</a></p>
        </div>
    </div>
    @if (Request.Cookies["dropiniondisclaimer4xy9"] == null)
    {
        <div id="cookie_disclaimer">
            <p class="col-sm-10" style="text-align:center">
                This website uses cookies to ensure you get the best experience on our website.
                <a href="@Url.Action("Privacy", "Support")" target="_blank">Learn more</a>
            </p>
            <p id="cookie_stop">
                <a role="button" tabindex="0" class="cc-btn cc-dismiss">Got it!</a>
            </p>
        </div>
    }
    else if (!(Request.Cookies["dropiniondisclaimer4xy9"].Value == "true"))
    {
        <div id="cookie_disclaimer">
            <p class="col-sm-10">
                This website uses cookies to ensure you get the best experience on our website.
                <a href="@Url.Action("Privacy", "Support")" target="_blank">Learn more</a>
            </p>
            <p id="cookie_stop">
                <a role="button" tabindex="0" class="cc-btn cc-dismiss">Got it!</a>
            </p>
        </div>
    }
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
