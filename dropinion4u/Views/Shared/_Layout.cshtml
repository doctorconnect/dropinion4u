    @*@Styles.Render("/Content/bootstrap.min.css")*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/toastr")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="~/Scripts/sweetalert.min.js"></script>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/customscripts/CustomLoader.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="padding:0">
        <div class="input-group">
            <a href="@Url.Action("Index", "Home")">
                <img src="~/images/Logo.png" alt="" height="50px;" />
            </a>
            @*<input id="searchbox" type="search" class="form-control validate" name="searchbox" placeholder="Search Dr.Opinion" style="width:170px;margin-left:20px;margin-top:7px;border-radius:20px;">*@
            <div class="buscar-caja pull-left">
                <input id="txtsearchbox" type="text" name="" class="buscar-txt" onmouseover="$(this).focus();" placeholder="Search Dr.Opinion" />
                <a class="buscar-btn" style="text-decoration:none">
                    <i class="fa fa-search"></i>
                    @*&#128270;*@
                </a>
            </div>
        </div>
        <div class="row d-lg-none" style="width:100%;margin-left:0px;margin-right:0px;">
            <span class="col-3 fa fa-user" onclick="showProfile()" style="cursor:pointer;color:darkviolet;text-align:center;background-color:rgba(246,246,246);border:1px solid white;border-radius: 10px;height:30px;padding-top:6px;" dir="auto"></span>
            <span class="col-3 fa fa-book" onclick="showFeeds()" style="cursor: pointer; color: limegreen; text-align: center; background-color: rgba(246,246,246); border: 1px solid white; border-radius: 10px; height: 30px; padding-top: 6px" dir="auto"></span>
            <span class="col-3 fa fa-bookmark" onclick="showRight()" style="cursor: pointer; color: red; text-align: center; background-color: rgba(246,246,246); border: 1px solid white; border-radius: 10px; height: 30px; padding-top: 6px;" dir="auto"></span>
            <span class="col-3 fa fa-list-ul" data-toggle="collapse" data-target="#nvadiv" aria-controls="nvadiv" aria-expanded="false" aria-label="Toggle navigation" style="color:red;text-align:center;background-color:rgba(246,246,246);border:1px solid white;border-radius: 10px;height:30px;padding-top:6px;" dir="auto"></span>
        </div>
        <div class="collapse navbar-collapse" id="nvadiv">
            <ul class="navbar-nav mr-auto">
                @if (Session["UserID"] != null)
                {
                    <li class="nav-item dropdown">
                        @*<a class="dropdown-toggle" data-toggle="dropdown" title="User" href="#" style="background-color:rgb(244,244,244); border-radius:20px;height:40px;width:120px;margin-top:4px;padding-left:14px;padding-top:11px;margin-right:18px;">
                                <span class="glyphicon glyphicon-user"> </span>
                                Vinay
                            </a>*@
                        <a class="nav-link dropdown-toggle" href="#" id="navbarUser" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <img style="border-radius:20px;" height="40" src="~/images/1.png" width="40" alt="">
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarUser">
                            <a class="dropdown-item" href="@Url.Action("SelfProfile","UserProfile")">
                                <span class="fa fa-user"> </span>
                                View profile
                            </a>
                            <a class="dropdown-item" href="@Url.Action("Settings","UserProfile")">
                                <span class="fa fa-question"></span>
                                Settings
                            </a>
                            <a class="dropdown-item" href="javascript:void(0);" id="logout" onclick="logout()">
                                <span class="fa fa-sign-out"></span>
                                Logout
                            </a>
                        </div>
                    </li>
                }
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <img style="border-radius:20px;" height="40" src="~/images/contact.gif" width="40" alt="">
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" data-toggle="modal" data-target="#modalFeedbackForm" style="cursor:pointer">
                            <span class="fa fa-envelope"></span>
                            Feedback
                        </a>
                        <a class="dropdown-item" href="@Url.Action("Privacy","Support")">
                            <span class="fa fa-exclamation"></span>
                            Terms and Conditions
                        </a>
                        <a class="dropdown-item" href="@Url.Action("FAQs","Support")">
                            <span class="fa fa-question"></span>
                            FAQs
                        </a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container bootstrap snippet">
        @RenderBody()
    </div>
    @*<div class="footer-bg" style="display:none">
            <div class="container">
                <p class="pull-left">
                    <a href="#">&copy; 2020 - Dr. Opinion Point - Copyright Protected</a>
                </p>
                <p class="pull-right"><a href="@Url.Action("Privacy", "Support")" target="_blank">Terms and Conditions</a></p>
            </div>
        </div>*@

</body>
