                                    FAQs
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Feedback","Support")">
                                    <span class="glyphicon glyphicon-earphone"></span>
                                    Feedback
                                </a>
                            </li>
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" title="More" href="#">
                                    <span class="glyphicon glyphicon-user"></span><b>More</b>
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu" role="menu">
                                    @*<li>@Html.ActionLink("Company Overview", "CompOverview", "Support")</li>
                                        <li>@Html.ActionLink("Vision and Quality Policy", "VisionPolicy", "Support")</li>
                                        <li>@Html.ActionLink("Locations", "Location", "Support")</li>
