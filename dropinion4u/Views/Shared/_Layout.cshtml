    @Styles.Render("/Content/main.css")
    <link href="~/Content/chat.css" rel="stylesheet" />
    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
    <style>
        #nvadiv {
            display: block;
            width: 80%;
            -webkit-box-shadow: 1px 1px 1px rgba(0,0,0,0.2);
            -moz-box-shadow: 1px 1px 1px rgba(0,0,0,0.2);
            box-shadow: 1px 1px 1px rgba(0,0,0,0.2);
        }

            #nvadiv > li > a {
                display: block;
                padding: 12px 14px;
                font-size: 1.0em;
                color: #d4d4d4;
                text-decoration: none;
                border-bottom: 1px solid #212121;
                background-color: #343434;
                background: -webkit-gradient(linear, left top, left bottom, from(#343434), to(#292929));
                background: -webkit-linear-gradient(top, #343434, #292929);
                background: -moz-linear-gradient(top, #343434, #292929);
                background: -ms-linear-gradient(top, #343434, #292929);
                background: -o-linear-gradient(top, #343434, #292929);
                background: linear-gradient(top, #343434, #292929);
            }

                #nvadiv > li > a:hover, #nav > li > a.open {
                    color: #e9e9e9;
                    border-bottom-color: #384f76;
                    background-color: #6985b5;
                    background: -webkit-gradient(linear, left top, left bottom, from(#6985b5), to(#456397));
                    background: -webkit-linear-gradient(top, #6985b5, #456397);
                    background: -moz-linear-gradient(top, #6985b5, #456397);
                    background: -ms-linear-gradient(top, #6985b5, #456397);
                    background: -o-linear-gradient(top, #6985b5, #456397);
                    background: linear-gradient(top, #6985b5, #456397);
                }

        #cookie_disclaimer {
            position: fixed;
            bottom: 0px;
            left: 5%;
            right: 5%;
            width: 90%;
            padding: 3px 5px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            background-color: rgba(239, 239, 239, 0.90);
            border-radius: 5px;
            box-shadow: 0 0 2px 1px rgba(0, 0, 0, 0.2);
        }

        #cookie_stop {
            border-radius: 2px;
            width: 100px;
            cursor: pointer;
        }
    </style>
    <script src="~/js/jquery.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#cookie_stop').click(function () {
                $('#cookie_disclaimer').slideUp();
                var nDays = 999;
                var cookieName = "dropiniondisclaimer4xy9";
                var cookieValue = "true";
                var today = new Date();
                var expire = new Date();
                expire.setTime(today.getTime() + 3600000 * 24 * nDays);
                document.cookie = cookieName + "=" + escape(cookieValue) + ";expires=" + expire.toGMTString() + ";path=/";
            });

        });
    </script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:aliceblue">
        <div class="container">
