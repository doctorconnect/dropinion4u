<div style="margin-bottom: 16px;">
    <div style="position:relative;width:100%;display:flex;">
        <div class="postveryveryouter" style="border: 2px solid rgba(246,246,246,.9);">
            <div class="postveryouter">
                <!--User Image-->
                <a style="color: #385898;" aria-label="Vinay Goel's timeline" class="postouter" href="@Url.Action("UserProfile", "UserProfile")" role="link" tabindex="0">
                    <div style="position: relative;">
                        <img class="postimage" style="display: block;border: 0;" height="40" src="~/images/1.png" width="40" alt="">
                        <div class="postimage postimageone" style="height: 40px; width: 40px;"></div>
                    </div>
                    <div class="postimage postimage2" data-novc="1"></div>
                </a>
                <!--Post Button-->
                <div style="background-color:rgb(242,242,242)" data-toggle="modal" data-target="#modalPostForm" class="postbutton" role="button" tabindex="0">
                    <div style="font-size:15px;">Wanna Create a Post, User?</div>
                    <div class="postbutton2" data-novc="1" style="border-radius: 20px;"></div>
                </div>
                <!--More options Buttons-->
                <div class="CreatePostMore">
                    <div class="CreatePostMoreimageouter CreatePostMoreimagecontainer" role="button" tabindex="0">
                        <div class="CreatePostMoreimageouter">
                            @*<img src="~/images/Camera.png" alt="" height="20" width="20">*@
                            <span class="glyphicon glyphicon-tasks" style="color:darkviolet" dir="auto"></span>&nbsp;&nbsp;Create Blog
                        </div>
                        <div data-novc="1"></div>
                    </div>
                    <input accept="image/*,image/heif,image/heic,video/*,video/mp4,video/x-m4v,video/x-matroska" style="display:none;" multiple="" type="file">
                    <div class="CreatePostMoreimageouter CreatePostMoreimagecontainer" role="button" tabindex="0">
                        <div class="CreatePostMoreimageouter">
                            @*<img src="~/images/Photo.png" alt="" height="20" width="20">*@
                            <span class="glyphicon glyphicon-picture" style="color:limegreen" dir="auto"></span>&nbsp;&nbsp;Photo/Video
                        </div>
                        <div data-novc="1">
                        </div>
                    </div>
                    <div class="CreatePostMoreimageouter CreatePostMoreimagecontainer" role="button" tabindex="0">
                        <div class="CreatePostMoreimageouter">
                            <span class="glyphicon glyphicon-file" style="color:red" dir="auto"></span>&nbsp;&nbsp;Document
                        </div>
                        <div data-novc="1"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
