@{
    ViewBag.Title = "Login Form";
}

<div class="modal fade" id="modalLoginForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h5 class="modal-title w-100 font-weight-bold" id="hmsg">We don't spam!</h5>
            </div>
            <div class="modal-footer d-flex justify-content-center">

                <div id="emailform" onmouseover="validateemail()">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                        <input id="email" type="email" class="form-control validate" name="email" placeholder="Enter your email address..." autofocus>
                    </div><br />
                    <div id="spanerrorNext" style="color:darkred"></div>
                    <div id="spanerrorNext1" style="color:darkred"></div>
                    <button id="btnNext" class="btn btn-default" onclick="submitEmail()" style="background-color:limegreen" disabled>Next</button>
                    <button class="btn btn-default" data-dismiss="modal">Not today!</button>
                </div>
                <div id="passwordform" onmouseover="validatepwdfield()">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-briefcase"></i></span>
                        <input id="password" type="password" class="form-control validate" name="password" placeholder="Enter your password...">
                    </div><a href="#" onclick="confirmemail()">Forgot Password</a><br />
                    <div id="spanerrorLogin" style="color:darkred"></div>
                    <div id="spanerrorLogin1" style="color:darkred"></div>
                    <button class="btn btn-default" onclick="back()">No! Not this Email!</button>
                    <button id="btnLogin" class="btn btn-default" onclick="login()" style="background-color:limegreen" disabled>Login</button>
                    <button class="btn btn-default" data-dismiss="modal">Leave It!</button>
                </div>
                <div id="registerform" onmouseover="focuscreatepwdfield()">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-briefcase"></i></span>
                        <input id="registrationpassword" type="password" class="form-control validate" name="registrationpassword" placeholder="Create password...">
                    </div><br />
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-briefcase"></i></span>
                        <input id="confirmpassword" type="password" class="form-control validate" name="confirmpassword" placeholder="Confirm password...">
                    </div><br />
                    <div id="spanerrorRegister" style="color:darkred"></div>
                    <div id="spanerrorConfirm" style="color:darkred"></div>
                    <div id="spanerrorRegister1" style="color:darkred"></div>
                    <button class="btn btn-default" onclick="back()">No! Not this Email!</button>
                    <button id="btnRegister" class="btn btn-default" onclick="register()" style="background-color:limegreen" disabled>Create Account</button>
                    <button class="btn btn-default" data-dismiss="modal">Later!</button>
                </div>
                <div id="confirmemailform" onmouseover="validateconfirmemail()">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                        <input id="confirmemail" type="email" class="form-control validate" name="email" placeholder="Enter your email address..." autofocus>
                    </div><br />
                    <div id="spanerrorConfirmEmail" style="color:darkred"></div>
                    <div id="spanerrorConfirmEmail1" style="color:darkred"></div>
                    <button class="btn btn-default" onclick="backtopwdfield()">Back</button>
                    <button id="btnConfirmEmail" class="btn btn-default" onclick="requestOTP()" style="background-color:limegreen" disabled>Request OTP</button>
                </div>
                <div id="newpasswordform" onmouseover="focuscreatenewpwdfield()">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-briefcase"></i></span>
                        <input id="otp" type="text" class="form-control validate" name="otp" placeholder="Enter OTP...">
                    </div><br />
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-briefcase"></i></span>
                        <input id="newpassword" type="password" class="form-control validate" name="newpassword" placeholder="Create password...">
                    </div><br />
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-briefcase"></i></span>
                        <input id="confirmnewpassword" type="password" class="form-control validate" name="confirmnewpassword" placeholder="Confirm password...">
                    </div><br />
                    <div id="spanerrornewpwd" style="color:darkred"></div>
                    <div id="spanerrorConfirmnewpwd" style="color:darkred"></div>
                    <div id="spanerrornewpwd1" style="color:darkred"></div>
                    <button class="btn btn-default" onclick="back()">Login Without Updating Password</button>
                    <button id="btnUpdatePassword" class="btn btn-default" onclick="UpdatePassword()" style="background-color:limegreen" disabled>Update Password</button>
                    <button class="btn btn-default" data-dismiss="modal">Later!</button>
                </div>
            </div>
        </div>
    </div>
</div>
