
<div class="modal fade" id="modalFeedbackForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Feedback</h4>
            </div>
            <div class="modal-footer d-flex justify-content-center">
                <textarea type="text" id ="txtAreaFeedback" class ="Feedback" spellcheck="true" placeholder="Enter text here..." style="width:100%;height:200px;border:1px solid rgba(250,250,250,0.5);border-radius:5px;vertical-align:text-top;word-wrap:break-word;text-size-adjust:auto;cursor:text"></textarea>
                <br />
                <br />
                <button id ="btnSubmit" onclick="PostFeedback(this);" data-dismiss="modal" class="btn btn-success" >Submit Feedback</button>
                <button class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    function PostFeedback() {
        var txtFeedback = $('.Feedback').val();
        if (txtFeedback != null) {
            $.ajax({
                type: "POST",
                url: "/Support/Feedback?Feedback=" + txtFeedback,
                contentType: "application/html; charset=utf-8",
                datatype: "html",
                success: function (t) {
                    alert("Feedback submit success");
                },
                error: function () {
                    window.location.href = "/Home/Index";
                }
            });
        }
    }
    $('.Feedback').keyup(function () {
        var val = $('.Feedback').val().trim().length;
        if (val < 500)
            $('#btnSubmit').prop("disabled", true);

    });
</script>



