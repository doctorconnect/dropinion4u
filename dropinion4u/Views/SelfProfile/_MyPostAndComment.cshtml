@using DataAccess;
@model BusinessEntities.posts
@{
    List<BusinessEntities.posts> CommentList = new DataAccess.DirectoryDataAccess().GetCommentListOnPost("POST");
    //List<BusinessEntities.posts> LikeList = new DataAccess.DirectoryDataAccess().GetLikeCount("POST");
    List<BusinessEntities.posts> PostList = new DataAccess.DirectoryDataAccess().GetPost();

    int RoleId = Convert.ToInt32(HttpContext.Current.Session["RoleId"]);
    int loggedUserId = Convert.ToInt32(HttpContext.Current.Session["ID"]);
}
@foreach (var cp in PostList)
{
    <div data-pagelet="FeedUnit_{n}" style="border: 2px solid rgba(246,246,246,.9);margin-bottom:16px;" class="postveryveryouter">
        <div class="userimageandtitle">
            <!--User Image-->
            <a style="color: #385898;" class="postouter" href="@Url.Action("UserProfile", "Home")" role="link" tabindex="0">
                <div style="position: relative;">
                    <img class="postimage" style="display: block;border: 0;" height="40" src="~/images/1.png" width="40" alt="">
                    <div class="postimage postimageone" style="height: 40px; width: 40px;"></div>
                </div>
                <div class="postimage postimage2" data-novc="1"></div>
            </a>
            <div style="flex-grow: 1;">
                <strong><a href="/User/UserProfile?Usercode=@cp.UserCode"> @cp.PostedByName</a></strong>
                <div>
                    <ul class="navbar-nav mr-auto" style="display:-webkit-inline-box;">
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <time class="timeago"><small>@cp.PostedDate</small></time>
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="fa fa-globe"></span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <nav class="navbar" style="padding:0">
                <div class="navbar-collapse">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="#" id="ellipsisfeed_{n}" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="fa fa-ellipsis-v"></span>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="ellipsisfeed_{n}">
                                <a class="dropdown-item" title="Report Post" onclick="FlagPost(@cp.PostId,@cp.UserCode)">
                                    <span class="fa fa-flag"> </span>
                                    Flag post
                                </a>
                                @if (RoleId != Convert.ToInt32("12"))
                                {
                                    if (RoleId == Convert.ToInt32("1"))
                                    {
                                        <a class="dropdown-item" title="Delete Post" onclick="DeletePost(@cp.PostId)">
                                            <span class="fa fa-trash"></span>
                                            Delete Post
                                        </a>
                                    }
                                    else
                                    {
                                        if (loggedUserId == Convert.ToInt32(cp.PostedBy))
                                        {
                                            <a class="dropdown-item" title="Delete  Post" onclick="DeletePost(@cp.PostId)">
                                                <span class="fa fa-trash"></span>
                                                Delete Post
                                            </a>
                                        }
                                    }
                                }
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
        <div class="posttext">
            @{
                @cp.Message
            }
        </div>
        <div class="likecommentinfo" style="">
            <div style="align-items: center;display: flex;flex-grow: 1;overflow-x: hidden;overflow-y: hidden;">
                <span aria-label="See who reacted to this" role="toolbar" style="align-items: center;display: flex;">
                    <span class="fa fa-thumbs-up" style="color:blue"></span>
                </span>
                @Html.Partial("~/Views/SelfProfile/_likeCount.cshtml", new ViewDataDictionary { { "cpid", cp.PostId } })
                @*<span style="padding-left: 6px;">@LikeList.Where(l => l.PostId == cp.PostId).Count() like(s)</span>*@
            </div>
            <div>
                @CommentList.Where(l => l.PostId == cp.PostId).Count() comment(s)
            </div>
        </div>
        <hr />
        <div style="display: flex;">
            <span class="likecommentpanel">
                <button class="btn btn-default" title="Like Post" id="@cp.PostId&Identifier=POST" onclick="LoadPostLike(this);">
                    <span class="fa fa-thumbs-up" style="color:GrayText;font-size:18px;margin-right:6px;"></span>Like
                </button>
            </span>
            <span class="likecommentpanel">
                <button class="btn btn-default" title="Comment On Post" onclick="showhide(@cp.PostId);">
                    <span class="fa fa-comment" style="color:GrayText;font-size:18px;margin-right:6px;"></span>Comment
                </button>
            </span>
            <span class="likecommentpanel">
                <button class="btn btn-default" title="Share Post" onclick="">
                    <span class="fa fa-share-alt" style="color:GrayText;font-size:18px;margin-right:6px;"></span>Share
                </button>
            </span>
            
        </div>
        @if (CommentList.Where(l => l.PostId == cp.PostId).Count() > 0)
        {
            <hr />
        }

        <div style="display:none; margin-top:10px;" id="P_@cp.PostId" class="publishComment">
            @foreach (var cmt in CommentList.Where(l => l.PostId == cp.PostId))
            {
            <div style="display:flex;padding:4px 16px 4px 16px">
                <a style="color: #385898;padding-top:6px;" class="postouter" href="@Url.Action("UserProfile", "Home")" role="link" tabindex="0">
                    <div style="position: relative;">
                        <img class="postimage" style="display: block;border: 0;" height="32" src="~/images/1.png" width="32" alt="">
                        <div class="postimage postimageone" style="height: 32px; width: 32px;"></div>
                    </div>
                    <div class="postimage postimage2" data-novc="1"></div>
                </a>
                <h4 class="media-heading">
                    <a href="/User/UserProfile?Usercode=@cmt.UserCode">@cmt.CommentedByName</a>
                    <small>@cmt.CommentedDate</small>
                </h4>
                <p>@cmt.Message</p>
            </div>
            }

            <div class="input-group input-group-sm " id="@cp.PostId">
                <input type="hidden" class="PostId" value="@cp.PostId" />
                <input type="text" name="txtvale" id="txt_@cp.PostId" class="form-control txtcomment" placeholder="write a comment..." />
                <div class="input-group-btn"><button id="@cp.PostId" onclick="PostComment(this);" class="btn btn-primary postComment">Comment</button></div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">
    function showhide(id) {
        var e = document.getElementById('P_'+id);
        e.style.display = (e.style.display == 'block') ? 'none' : 'block';
    }

    $(document).ready(function () {
          var success = '@TempData["success"]';
        if (success != null && success != undefined && success != '')
            toasterSuccessMessage(success);
        function toasterSuccessMessage(message) {
            new PNotify({
                title: 'Success',
                text: message,
                type: 'success',
                styling: 'bootstrap3'
            });
        }
    });

    function LoadPostLike(Id) {
        $.ajax
            ({
                url: "Home/PostLikes?key=" + Id.id,
                contentType: "application/html; charset=utf-8",
                type: "POST",
                datatype: "html",
                success: function (t) {
                    $("#dvHomePostsAndCommentBind").html(t)
                },
                error: function () {
                    $("#dvHomePostsAndCommentBind").html("PostsAndComment Not Found");
                   window.location.href = "/Home/Error";
                }
            });
    }



    function DeletePost(key) {
        //var Identifier = "POST";
        $.confirm({
            title: '',
            type: 'red',
            content: '<p style="font-style:italic;">Are you sure you want to Delete post ?</p>',
            buttons: {
                confirm: function () {
                    $.ajax({
                        url: "/Home/DeletePost?keyId=" + key +"&Identifier=POST",
                        method: 'post',
                        datatype: "html",
                        success: function (t) {
                            $("#dvHomePostsAndCommentBind").html(t)
                        },
                        error: function () {
                            $("#dvHomePostsAndCommentBind").html("PostsAndComment Not Found");
                            window.location.href = "/Home/Error";
                        }
                    });
                },
                cancel: function () {
                }
            }
        });
    }

    function FlagPost(key, userId) {
           $.confirm({
            title: '',
            type: 'red',
            content: '<p style="font-style:italic;">Are you sure, you found this post inappropriate? Once Flagged, it will go to Admin for Review.</p>',
            buttons: {
                confirm: function () {
                    $.ajax({
                        url: "/Home/FlagPost?key=" + key + "&Identifier=POST&Id=" + userId +"",
                        method: 'post',
                        datatype: "html",
                        success: function (t) {
                            $("#dvHomePostsAndCommentBind").html(t)
                        },
                        error: function () {
                            $("#dvHomePostsAndCommentBind").html("PostsAndComment Not Found");
                            window.location.href = "/Home/Error";
                        }
                    });
                },
                cancel: function () {
                }
            }
        });
    }

    function PostComment(Pid) {
        var controlName = Pid.id;
        var Comment = $("#txt_" + controlName + "").val();
                if (Comment != null) {
                $.ajax({
                    type: "POST",
                    url: "/Home/SaveComment?Identifier=POST&txtcomment=" + Comment + "&PostId=" + Pid.id,
                    contentType: "application/html; charset=utf-8",
                    datatype: "html",
                    success: function (t) {
                        $("#dvHomePostsAndCommentBind").html(t)
                    },
                    error: function () {
                        $("#dvHomePostsAndCommentBind").html("PostsAndComment Not Found");
                        window.location.href = "/Home/Error";
                    }
                });
            }
        }

</script>


